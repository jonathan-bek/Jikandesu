@{ Layout = "~/Shared/_Layout.cshtml"; }
@{ ViewBag.Title = "Manga"; }

<body ng-app="userMangaApp">
    <div ng-controller="userMangaCtrl as ctrl">
        <div class="col-xs-12">
            <div class="col-xs-0 col-sm-1"></div>
            <div class="col-xs-12 col-sm-10">
                <!-- Manga pages -->
                <div ng-repeat="p in ctrl.mangaPages" class="col-xs-2 text-center">
                    <p>{{p.Title}}</p>
                    <img ng-src="{{p.ImageUrl}}" ng-click="ctrl.redirectToManga(p)" style="max-width: 100%" />
                    <div ng-repeat="c in p.MangaChapters | limitTo: 1">
                        <p>Last updated:</p>
                        <p>{{c.ChapterUploadDateString}}</p>
                    </div>
                </div>
                <!-- Groups -->
            </div>
        </div>
    </div>
</body>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/Manga/UserManga/userMangaBundle.js"></script>

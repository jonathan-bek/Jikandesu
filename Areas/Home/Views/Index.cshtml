@{ Layout = "~/Shared/_Layout.cshtml"; }
@{ ViewBag.Title = "Home"; }

<body ng-app="homeApp">
    <p>Home App Html</p>
    <div ng-controller="animeHomeCtrl as ctrl">
        <div>
            <label>Get:</label>
            <input type="text" ng-model="ctrl.mangaUrl" />
            <button ng-click="ctrl.getMangaPage()">Get</button>
        </div>
        <label>Search:</label>
        <div class="header-display-scroller">
            <jd-row value="ctrl.pagedAnimeHeader"></jd-row>
            <jd-row value="ctrl.pagedMangaHeader"></jd-row>
        </div>
        <p>Display text: {{ctrl.displayText}}</p>
        <input ng-model="ctrl.searchText" />

        <button ng-click="ctrl.searchAllMediaByName()">search all media by name</button>
        <button ng-click="ctrl.getCurrentSeasonAnime()">get current season </button>
        <button ng-click="ctrl.getSeasonalAnime(2010, 'winter')">get seasonal, 2010 winter</button>
        <button ng-click="ctrl.testDb()">test db</button>
    </div>
</body>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/Home/HomeBundle.js"></script>
<script src="~/Scripts/Directives/JdRow/jdRowBundle.js"></script>
